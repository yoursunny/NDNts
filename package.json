{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs -r clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs -r docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/wtfnode": "^0.7.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@yoursunny/xo-config": "0.60.0",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.1",
    "typescript": "~5.8.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": "^22.11.0 || ^23.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "classic-level",
      "esbuild",
      "memif",
      "puppeteer"
    ],
    "overrides": {
      "@typescript-eslint/parser": "8.26.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level",
        "memory-level"
      ]
    }
  }
}
