  "devDependencies": {
    "@types/node": "24.0.13",
    "@types/wtfnode": "^0.7.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@yoursunny/xo-config": "0.1001.1",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "0.28.7",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^22.15.0 || ^24.0.0"
