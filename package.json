{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs -r clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs -r docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/wtfnode": "^0.7.3",
    "@vitest/coverage-v8": "^3.0.8",
    "@yoursunny/xo-config": "0.60.0",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.0",
    "typescript": "~5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": "^22.11.0 || ^23.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "classic-level",
      "esbuild",
      "memif",
      "puppeteer"
    ],
    "overrides": {
      "@typescript-eslint/parser": "8.26.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level",
        "memory-level"
      ]
    }
  }
}
