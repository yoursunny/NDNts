{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs -r clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs -r docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b",
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/wtfnode": "^0.7.3",
    "@vitest/coverage-v8": "^3.0.7",
    "@yoursunny/xo-config": "0.60.0",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.9",
    "typescript": "~5.8.2",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": "^22.11.0 || ^23.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "classic-level",
      "esbuild",
      "memif",
      "puppeteer"
    ],
    "overrides": {
      "@typescript-eslint/parser": "8.26.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level",
        "graphql-request"
      ]
    }
  }
}
