{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs -r clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs -r docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/wtfnode": "^0.7.3",
    "@typescript/lib-dom": "npm:@types/web@0.0.201",
    "@vitest/coverage-v8": "^3.0.5",
    "@yoursunny/xo-config": "0.60.0",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "~5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": "^22.11.0 || ^23.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "classic-level",
      "esbuild",
      "memif",
      "puppeteer"
    ],
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level",
        "graphql-request"
      ]
    }
  }
}
