{
  "name": "@ndn/root",
  "private": true,
  "scripts": {
    "build": "bash mk/build.sh",
    "clang-format": "git ls-files '*.cpp' | xargs -r clang-format-15 -i -style=file",
    "cover": "bash mk/build.sh cover",
    "lint": "bash mk/build.sh lint",
    "literate": "bash mk/literate.sh",
    "postinstall": "bash mk/bootstrap.sh",
    "preinstall": "npx only-allow pnpm",
    "shfmt": "git ls-files -- '*.sh' | xargs -r docker run --rm -u $(id -u):$(id -g) -v $PWD:/mnt -w /mnt mvdan/shfmt:v3 -l -w -s -i=2 -ci",
    "test": "vitest",
    "typedoc": "bash mk/typedoc.sh"
  },
  "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/wtfnode": "^0.7.3",
    "@typescript/lib-dom": "npm:@types/web@0.0.202",
    "@vitest/coverage-v8": "^3.0.5",
    "@yoursunny/xo-config": "0.60.0",
    "codedown": "^3.2.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.7",
    "typescript": "~5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": "^22.11.0 || ^23.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "classic-level",
      "esbuild",
      "memif",
      "puppeteer"
    ],
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint*",
        "typescript",
        "webpack"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "abstract-level",
        "graphql-request"
      ]
    }
  }
}
